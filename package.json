{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --build",
    "start": "node dist/server.js",
    "setup": "npm i && pm2 start --name portfolio-backend npm -- start --update-env --time && pm2 save",
    "deploy": "git pull --no-rebase && pm2 restart portfolio-backend --update-env --time && pm2 save"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, json",
    "exec": "npm run build && node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.10.0",
    "nodemailer": "^6.9.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/nodemailer": "^6.4.7",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.5"
  }
}
